@model AuthorDtoForUpdate

<div class="text-center">
    <div class="my-3 text-center" style="font-size:20px; font-weight:bold; background:rgba(200,200,200,0.1); width:240px; margin:0 auto; border-radius:6px; padding:12px; border:solid 1px; ">Güncelleme</div>

</div>
<div class="row">
    <div class="col-6">
       <form method="post" asp-action="Update">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="AuthorId" />
    <div class="form-group my-3">
        <label asp-for="FirstName">Ad</label>
        <input class="form-control" asp-for="FirstName"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="LastName">Soyad</label>
        <input class="form-control" asp-for="LastName"/>
    </div>
    <div class="form-group my-3">
      
            <button class="btn btn-outline-primary mx-2" type="submit">
                <i class="fa fa-save"></i>Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>Yazar
            </a>
 
    </div>
</form>

    </div>
</div>

